                <h3 class="feature-title">QR Code Exclusivo</h3>
                <p>Acesse e compartilhe o perfil do seu pet facilmente</p>
            </div>
        </div>
    </section>

    <script>
        // Anima√ß√£o de pets flutuantes
        function createFloatingPets() {
            const container = document.getElementById('floating-pets');
            const emojis = ['üê∂', 'üê±', 'üêæ', 'üíï', '‚≠ê'];
            const numPets = 15;

            for (let i = 0; i < numPets; i++) {
                const pet = document.createElement('div');
                pet.className = 'floating-pet';
                pet.textContent = emojis[Math.floor(Math.random() * emojis.length)];
                pet.style.left = `${Math.random() * 100}%`;
                pet.style.top = `${Math.random() * 100}%`;
                pet.style.animationDelay = `${Math.random() * 5}s`;
                container.appendChild(pet);
            }
        }

        // Inicializar anima√ß√µes
        createFloatingPets();
    </script>
</body>
</html>
