{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/uploads/(.*)",
            "dest": "/public/uploads/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/app.js"
        }
    ],
    "functions": {
        "app.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}
